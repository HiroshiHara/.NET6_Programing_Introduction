<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Grid1" Margin="4,4,4,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Label x:Name="Label1" Content="Hello, .NET6 World." HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" Height="63" Width="408" Background="{x:Null}" FontSize="36" Foreground="#FFD41313" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="TextBox1" Grid.Row="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="344" Height="96" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,23,0,0" Grid.RowSpan="2"/>
        <Button x:Name="Button1" Grid.Row="2" Content="PUSH" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Height="56" Width="328" Cursor="Hand" Click="Button1_Click"/>

    </Grid>
</Window>
